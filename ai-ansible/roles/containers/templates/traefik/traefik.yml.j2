global:
  checkNewVersion: true
  sendAnonymousUsage: false

api:
  dashboard: true
  insecure: true

log:
  level: {{ traefik_log_level }}
  format: json

accessLog:
  filePath: /var/log/access.log
  format: json

entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: secureweb
          scheme: https

  secureweb:
    address: :443
    http:
      tls:
        certResolver: letsencrypt

  metrics:
    address: :8082

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ traefik_cert_email }}
      storage: /letsencrypt/acme.json
      dnsChallenge:
        provider: cloudflare
        resolvers:
          - "1.1.1.1:53"
          - "8.8.8.8:53"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: {{ container_network }}

  file:
    directory: /config
    watch: true

metrics:
  prometheus:
    entryPoint: metrics
